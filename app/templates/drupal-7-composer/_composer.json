{
  "name": "factorial/<%= name %>",
  "description": "<%= name %>",
  "repositories": [
    {
      "type": "composer",
      "url": "https://packagist.drupal-composer.org/"
    },
    {
      "type": "package",
      "package": {
        "name": "library/backbone",
        "version": "1.0.0",
        "type": "drupal-library",
        "dist": {
          "url": "https://github.com/jashkenas/backbone/archive/1.0.0.zip",
          "type": "zip"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "library/underscore",
        "version": "1.5.2",
        "type": "drupal-library",
        "dist": {
          "url": "https://github.com/jashkenas/underscore/archive/1.5.2.zip",
          "type": "zip"
        }
      }
    },
    {
      "package": {
        "name": "library/mthaml",
        "source": {
          "reference": "master",
          "type": "git",
          "url": "https://github.com/factorial-io/MtHaml.git"
        },
        "type": "drupal-library",
        "version": "1.7-dev"
      },
      "type": "package"
    },
    {
      "type": "git",
      "url": "https://github.com/factorial-io/tcm.git"
    },
    {
      "type": "git",
      "url": "https://github.com/factorial-io/responsive_image_styles.git"
    },
    {
      "type": "git",
      "url": "https://github.com/factorial-io/fabalicious.git"
    },
    {
      "type": "git",
      "url": "https://github.com/factorial-io/drupal-docker.git"
    },
    {
      "type": "git",
      "url": "https://github.com/stmh/oxide.git"
    },
    {
      "type": "git",
      "url": "https://github.com/stmh/MtHaml.git"
    },
    {
      "type": "git",
      "url": "https://github.com/factorial-io/frontend"
    },
    {
      "type": "git",
      "url": "https://github.com/factorial-io/factorial-tools-installer-plugin.git"
    }

  ],
  "require": {
    "composer/installers": "~1.0",
    "derhasi/composer-preserve-paths": "0.1.*",
    "factorial-io/factorial-tools-installer-plugin": "~1.0",
    "drupal/drupal-library-installer-plugin": "~0.1",
    "library/backbone": "1.0.0",
    "library/underscore": "1.5.2",
    "drupal/drupal": "7.*",
    "drupal/admin_views": "7.*",
    "drupal/coffee": "7.*",
    "drupal/date": "7.*",
    "drupal/devel": "7.*",
    "drupal/ember": "7.x@dev",
    "drupal/entity": "7.*",
    "drupal/entityreference": "7.*",
    "drupal/features": "7.*",
    "drupal/field_tools": "7.*@dev",
    "drupal/fieldable_panels_panes": "7.*",
    "drupal/focal_point": "7.*@dev",
    "drupal/list_predefined_options": "7.*",
    "drupal/navbar": "7.*",
    "drupal/panelizer": "7.*",
    "drupal/panels": "7.*",
    "drupal/pathauto": "7.*",
    "drupal/strongarm": "7.*",
    "drupal/transliteration": "7.*",
    "drupal/views": "7.*",
    "drupal/views_bulk_operations": "7.*",
    "drupal/xhprof": "7.*@dev",
    "library/mthaml": "1.7-dev",
    "factorial-io/oxide": "dev-master",
    "factorial-io/frontend": "dev-master",
    "factorial-io/tcm": "dev-master",
    "factorial-io/responsive_image_styles": "dev-master",
    "factorial-io/fabalicious": "dev-master",
    "factorial-io/drupal-docker": "dev-master"
  },
  "extra": {
    "drupal-libraries": {
      "library-directory": "web/sites/all/libraries",
      "libraries": [
        {
          "name": "backbone",
          "package": "library/backbone"
        },
        {
          "name": "underscore",
          "package": "library/underscore"
        },
        {
          "name": "mthaml",
          "package": "library/MtHaml"
        }
      ]
    },
    "installer-paths": {
      "public": ["type:drupal-core"],
      "public/sites/all/modules/contrib/{$name}": ["type:drupal-module"],
      "public/sites/all/profiles/contrib/{$name}": ["type:drupal-profile"],
      "public/sites/all/themes/contrib/{$name}": ["type:drupal-theme"],
      "public/sites/all/themes/engines/{$name}": ["type:drupal-theme-engine"],
      "public/sites/all/libraries/{$name}/": ["type:drupal-library"]
    },
    "preserve-paths": [
      "public/sites/all/modules/contrib",
      "public/sites/all/themes/contrib",
      "public/sites/all/themes/custom",
      "public/sites/all/modules/custom",
      "public/sites/all/libraries",
      "public/sites/default/settings.php",
      "public/sites/default/files"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "post-install-cmd": [
      "ln -sf _tools/fabalicious/fabfile.py fabfile.py",
      "cd _tools; ln -sf drupal-docker docker"
    ]
  }
}
